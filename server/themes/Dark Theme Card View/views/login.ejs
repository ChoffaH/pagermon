<!DOCTYPE html>
<html lang="en">
<% include global/header.ejs %>
<base href="/">
</head>


<body id="admin-body">
  <% include global/menu.ejs %>
  <div id="content" class="container">
    <div class="container-fluid" style="padding-top: 15px;">
      <div class="col-xs-8" style="margin-top: 30px;">
        <h4>Login to your account</h4>
        <% if (message.length > 0) { %>
        <div class="alert alert-danger" style="margin-top:30px;"><%= message %> <i class="fas fa-lg fa-sad-cry" style="padding-left:5px"></i></div>
        <% } %>
        <hr />
        <!-- LOGIN FORM -->
        <form action="/login" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="user">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
    
            <button type="submit" class="btn btn-login btn-lg">Login</button>
        </form>
      </div>
    </div>
  </div>
<% include global/footer.ejs %>